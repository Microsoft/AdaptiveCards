{
	"$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
	"type": "AdaptiveCard",
	"version": "1.0",
    "body": [
        {
            "type": "TextBlock",
            "wrap": true,
            "text": "Cards can have action sets in the middle of their body."
        },
        {
            "type": "ActionSet",
            "actions": [
                {
                    "type": "Action.ShowCard",
                    "title": "ShowCard",
                    "card": {
                        "type": "AdaptiveCard",
                        "body": [
                            {
                                "type": "TextBlock",
                                "text": "This is a show card"
                            }
                        ]
                    }
                },
                {
                    "type": "Action.OpenUrl",
                    "title": "OpenUrl",
                    "url": "http://adaptivecards.io"
                }
            ]
        },
        {
            "type": "TextBlock",
            "wrap": true,
            "text": "They can be horizontal..."
        },
        {
            "type": "ActionSet",
            "orientation": "horizontal",
            "actions": [
                {
                    "type": "Action.ShowCard",
                    "title": "ShowCard",
                    "card": {
                        "type": "AdaptiveCard",
                        "body": [
                            {
                                "type": "TextBlock",
                                "text": "This is a show card"
                            }
                        ]
                    }
                },
                {
                    "type": "Action.OpenUrl",
                    "title": "OpenUrl",
                    "url": "http://adaptivecards.io"
                }
            ]
        },
        {
            "type": "TextBlock",
            "wrap": true,
            "text": "... or vertical"
        },
        {
            "type": "ActionSet",
            "orientation": "vertical",
            "actions": [
                {
                    "type": "Action.ShowCard",
                    "title": "ShowCard",
                    "card": {
                        "type": "AdaptiveCard",
                        "body": [
                            {
                                "type": "TextBlock",
                                "text": "This is a show card"
                            }
                        ]
                    }
                },
                {
                    "type": "Action.OpenUrl",
                    "title": "OpenUrl",
                    "url": "http://adaptivecards.io"
                }
            ]
        },
        {
            "type": "TextBlock",
            "wrap": true,
            "text": "There's also still \"actions\" at the bottom of the card"
        }
    ],
	"actions": [
		{
			"type": "Action.ShowCard",
			"title": "ShowCard",
			"card": {
				"type": "AdaptiveCard",
                "body": [
                    {
                        "type": "TextBlock",
                        "text": "This is a show card"
                    }
                ]
			}
		},
		{
			"type": "Action.OpenUrl",
			"title": "OpenUrl",
			"url": "http://adaptivecards.io"
		}
	]
}