{
	"type": "AdaptiveCard",
	"$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
	"version": "1.2",
	"body": [
		{
			"type": "Container",
			"fallback": "drop",
			"items": [
				{
					"type": "Container",
					"items": [
						{
							"type": "ColumnSet",
							"columns": [
								{
									"type": "Column",
									"width": "auto",
									"items": [
										{
											"type": "TextBlock",
											"text": "You should never see this (fallback: drop)!"
										},
										{
											"type": "Graph",
											"someProperty": "blah"
										}
									]
								}
							]
						}
					]
				}
			]
		},
		{
			"type": "TextBlock",
			"text": "Nothing above this! ↑",
			"weight": "lighter"
		},
		{
			"type": "TextBlock",
			"text": "Message just below ↓",
			"weight": "lighter"
		},
		{
			"type": "Container",
			"fallback": {
				"type": "TextBlock",
				"weight": "bolder",
				"color": "good",
				"text": "If you see this, things are working great!"
			},
			"items": [
				{
					"type": "Container",
					"items": [
						{
							"type": "ColumnSet",
							"columns": [
								{
									"type": "Column",
									"width": "auto",
									"items": [
										{
											"type": "TextBlock",
											"text": "You should never see this (fallback: textblock)!",
											"color": "attention",
											"weight": "bolder"
										},
										{
											"type": "Graph",
											"someProperty": "blah"
										}
									]
								}
							]
						}
					]
				}
			]
		},
		{
			"type": "TextBlock",
			"text": "There should be another message below ↓",
			"weight": "lighter"
		},
		{
			"type": "GraphV2",
			"fallback": {
				"type": "Graph",
				"fallback": {
					"type": "TextBlock",
					"text": "Multiply-nested fallback works!",
					"weight": "bolder",
					"color": "good"
				}
			}
		}
	]
}
