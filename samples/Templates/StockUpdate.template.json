{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.0",
    "body": [
        {
            "type": "Container",
            "items": [
                {
                    "type": "TextBlock",
                    "text": "{companyName}",
                    "size": "Medium",
                    "wrap": true
                },
                {
                    "type": "TextBlock",
                    "text": "{primaryExchange}: {symbol}",
                    "isSubtle": true,
                    "spacing": "Small",
                    "wrap": true
                },
                {
                    "type": "TextBlock",
                    "text": "{{DATE({parseDateFromEpoch(latestUpdate)}, SHORT)}} {{TIME({parseDateFromEpoch(latestUpdate)})}}"
                }
            ]
        },
        {
            "type": "Container",
            "spacing": "None",
            "items": [
                {
                    "type": "ColumnSet",
                    "columns": [
                        {
                            "type": "Column",
                            "width": "stretch",
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "text": "{latestPrice}",
                                    "size": "ExtraLarge"
                                },
                                {
                                    "type": "TextBlock",
                                    "text": "{if(change >= 0, '▲', '▼')} USD {change} ({format(changePercent, '%')})",
                                    "color": "{if(change >= 0, 'good', 'attention')}",
                                    "spacing": "None"
                                }
                            ]
                        },
                        {
                            "type": "Column",
                            "width": "auto",
                            "items": [
                                {
                                    "type": "FactSet",
                                    "facts": [
                                        {
                                            "title": "Open",
                                            "value": "{open}"
                                        },
                                        {
                                            "title": "High",
                                            "value": "{high}"
                                        },
                                        {
                                            "title": "Low",
                                            "value": "{low}"
                                        }
                                    ]
                                }
                            ]
                        }
                    ]
                }
            ]
        }
    ]
}