{

    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",

    "type": "AdaptiveCard",

    "version": "1.0",

    "body": [

        {

            "type": "ColumnSet",

            "columns": [

                {

                    "type": "Column",

                    "width": 2,

                    "items": [

                        {

                            "type": "TextBlock",

                            "text": "{title}",

                            "weight": "Bolder",

                            "size": "Medium"

                        },

                        {

                            "type": "TextBlock",

                            "text": "{body}",

                            "isSubtle": true,

                            "wrap": true

                        },

                        {

                            "type": "TextBlock",

                            "text": "{disclaimer}",

                            "isSubtle": true,

                            "wrap": true,

                            "size": "Small"

                        },

                        {

                            "type": "TextBlock",

                            "text": "{properties[0].title}",

                            "wrap": true

                        },

                        {

                            "type": "Input.Text",

                            "id": "myName",

                            "placeholder": "{properties[0].placeholder}"

                        },

                        {

                            "type": "TextBlock",

                            "text": "{properties[1].title}",

                            "wrap": true

                        },

                        {

                            "type": "Input.Text",

                            "id": "myEmail",

                            "placeholder": "{properties[1].placeholder}",

                            "style": "Email"

                        },

                        {

                            "type": "TextBlock",

                            "text": "{properties[2].title}"

                        },

                        {

                            "type": "Input.Text",

                            "id": "myTel",

                            "placeholder": "{properties[2].placeholder}",

                            "style": "Tel"

                        }

                    ]

                },

                {

                    "type": "Column",

                    "width": 1,

                    "items": [

                        {

                            "type": "Image",

                            "url": "{thumbnailUrl}",

                            "size": "auto"

                        }

                    ]

                }

            ]

        }

    ],

    "actions": [

        {

            "type": "Action.Submit",

            "title": "Submit"

        }

    ]

}