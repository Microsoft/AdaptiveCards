{
    "type": "AdaptiveCard",
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.3",
    "body": [
        {
            "type": "Container",
            "style": "emphasis",
            "backgroundImage": "https://messagecardplayground.azurewebsites.net/assets/Mostly%20Cloudy-Background.jpg",
            "minHeight": "400px",
            "items": [
                {
                    "type": "Container",
                    "minHeight": "380px"
                },
                {
                    "type": "ColumnSet",
                    "columns": [
                        {
                            "type": "Column",
                            "width": "180px",
                            "items": [
                                {
                                    "type": "Container",
                                    "style": "accent",
                                    "items":[
                                        {
                                            "type" : "TextBlock",
                                            "text" : "Hello World"
                                        }
                                    ]
                                }
                            ]
                        },
                        {
                            "type": "Column"
                        }
                    ]
                }
            ]
        }
    ]
}
