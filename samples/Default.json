{
  "$schema": "https://microsoft.github.io/AdaptiveCards/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "TextBlock",
      "text": "This is a text element",
      "size": "large"
    },
    {
      "type": "Image",
      "url": "http://connectorsdemo.azurewebsites.net/images/MicrosoftSurface_024_Cafe_OH-06315_VS_R1c.jpg",
      "size": "medium"
    },
    {
      "type": "FactSet",
      "facts": [
        {
          "title": "This is a fact name",
          "value": "This is a fact value"
        },
        {
          "title": "This is a fact name",
          "value": "This is a fact value"
        },
        {
          "title": "This is a fact name",
          "value": "This is a fact value"
        }
      ]
    },
    {
      "type": "Input.Date",
      "id": "myDate"
    },
    {
      "type": "Input.Text",
      "placeholder": "Enter text here",
      "id": "myText"
    },
    {
      "type": "Input.ChoiceSet",
      "id": "myChoices",
      "title":"More choices",
      "choices": [
        {
          "title": "Choice 1",
          "value": "1"
        },
        {
          "title": "Choice 2",
          "value": "2"
        },
        {
          "title": "Choice 3",
          "value": "3"
        }
      ]
    },
    {
      "type": "ImageSet",
      "imageSize": "medium",
      "images": [
        {
          "type": "Image",
          "url": "http://connectorsdemo.azurewebsites.net/images/MicrosoftSurface_024_Cafe_OH-06315_VS_R1c.jpg"
        },
        {
          "type": "Image",
          "url": "http://connectorsdemo.azurewebsites.net/images/WIN12_Scene_01.jpg"
        },

        {
          "type": "Image",
          "url": "http://connectorsdemo.azurewebsites.net/images/WIN12_Anthony_02.jpg"
        }
      ]
    },
    {
      "type": "Container",
      "items": [
        {
          "type": "TextBlock",
          "text": "Second section",
          "size": "large"
        },
        {
          "type": "ColumnSet",
          "columns": [
            {
              "type": "Column",
              "size": "auto",
              "items": [
                {
                  "type": "Image",
                  "url": "http://connectorsdemo.azurewebsites.net/images/MSC12_Oscar_002.jpg",
                  "size": "small"
                }
              ]
            },
            {
              "type": "Column",
              "size": "stretch",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "This is the activityTitle property"
                },
                {
                  "type": "TextBlock",
                  "text": "This is the activitySubtitle property",
                  "separation": "none"
                },
                {
                  "type": "TextBlock",
                  "text": "This is the activityText property",
                  "separation": "none"
                }
              ]
            }
          ]
        }
      ]
    }
  ]

}
