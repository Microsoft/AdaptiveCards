{	"type": "AdaptiveCard",	"version": "1.3",	"body": [		{			"type": "Input.Text",			"id": "notRequired",			"label": "Not Required:"		},		{ 			"type": "Input.Text",			"id": "required",			"label": "Required:",			"isRequired": true,			"errorMessage": "Error: Input is required"		},		{			"type": "Input.Text",			"id": "notRequiredRegex",			"label": "Not Required (with regex):",			"errorMessage": "Error: The input must start with a uppercase letter",			"regex": "([A-Z])\\w+"		},		{			"type": "Input.Text",			"id": "requiredRegex",			"label": "Required (with regex):",			"isRequired": true,			"errorMessage": "Error: Input is required and must start with a uppercase letter",			"regex": "([A-Z])\\w+"		}	],	"actions": [		{			"type": "Action.Submit",			"title": "Send!"		}	]}