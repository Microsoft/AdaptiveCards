{
	"$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
	"type": "AdaptiveCard",
	"version": "1.3",
	"body": [
		{
			"type": "Input.Time",
			"id": "notRequired",
			"label": "Not Required:"
		},
		{
			"type": "Input.Time",
			"id": "required",
			"label": "Required:",
			"isRequired": true,
			"errorMessage": "Error: Time is required"
		},
		{
			"type": "Input.Time",
			"id": "notRequiredWithMaxMin",
			"label": "Not Required (with max and min):",
			"errorMessage": "Error: Time must be between 9 am and 5 pm",
			"min": "09:00",
			"max": "17:00"
		},
		{
			"type": "Input.Time",
			"id": "requiredWithMaxMin",
			"label": "Required (with max and min)",
			"isRequired": true,
			"errorMessage": "Error: Time is required and must be between 9 am and 5 pm",
			"min": "09:00",
			"max": "17:00"
		}
	],
	"actions": [
		{
			"type": "Action.Submit",
			"title": "OK"
		}
	]
}
