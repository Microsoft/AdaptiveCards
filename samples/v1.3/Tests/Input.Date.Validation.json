{
	"$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
	"type": "AdaptiveCard",
	"version": "1.3",
	"body": [
		{
			"type": "Input.Date",
			"id": "notRequired",
			"label": "Not Required:"
		},
		{
			"type": "Input.Date",
			"id": "required",
			"label": "Required:",
			"isRequired": true,
			"errorMessage": "Error: Date is required"
		},
		{
			"type": "Input.Date",
			"id": "notRequiredWithMaxMin",
			"label": "Not Required (with max and min):",
			"errorMessage": "Error: Date must be in 2019",
			"min": "2019-01-01",
			"max": "2019-12-31"
		},
		{
			"type": "Input.Date",
			"id": "requiredWithMaxMin",
			"label": "Required (with max and min)",
			"isRequired": true,
			"errorMessage": "Error: Date is required and must be in 2019",
			"min": "2019-01-01",
			"max": "2019-12-31"
		}
	],
	"actions": [
		{
			"type": "Action.Submit",
			"title": "OK"
		}
	]
}
