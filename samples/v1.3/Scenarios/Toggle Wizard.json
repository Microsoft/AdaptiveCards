{
	"type": "AdaptiveCard",
	"version": "1.3",
	"body": [
		{
			"type": "TextBlock",
			"text": "Please provide the following information:"
		},
		{
			"type": "Container",
			"items": [
				{
					"type": "Input.Text",
					"placeholder": "First Name",
					"id": "FirstName",
					"isRequired":true,
					"errorMessage" : "First Name is required"
				},
				{
					"type": "Input.Text",
					"placeholder": "Middle Name",
					"id": "MiddleName"
				},
				{
					"type": "Input.Text",
					"placeholder": "Last Name",
					"id": "LastName",
					"isRequired":true,
					"errorMessage" : "Last Name is required"
				},
				{
					"type": "ActionSet",
					"horizontalAlignment": "Right",
					"actions": [
						{
							"type": "Action.ToggleVisibility",
							"title": "Next->",
							"targetElements": [
								{
									"elementId": "nameProperties",
									"isVisible": false
								},
								{
									"elementId": "addressProperties",
									"isVisible": true
								}
							],
							"inputs":["nameProperties"]
						}
					]
				}
			],
			"id": "nameProperties"
		},
		{
			"type": "Container",
			"id": "addressProperties",
			"items": [
				{
					"type": "Input.Text",
					"placeholder": "Address line 1",
					"id": "AddressLine1",
					"isRequired":true,
					"errorMessage" : "Address is required"
				},
				{
					"type": "Input.Text",
					"placeholder": "Address line 2",
					"id": "AddressLine2"
				},
				{
					"type": "ColumnSet",
					"columns": [
						{
							"type": "Column",
							"width": "stretch",
							"items": [
								{
									"type": "Input.Text",
									"placeholder": "City",
									"id": "City",
									"isRequired":true,
									"errorMessage" : "City is required"
								}
							]
						},
						{
							"type": "Column",
							"width": "stretch",
							"items": [
								{
									"type": "Input.Text",
									"placeholder": "State",
									"id": "State",
									"isRequired":true,
									"errorMessage" : "State is required"
								}
							]
						},
						{
							"type": "Column",
							"width": "stretch",
							"items": [
								{
									"type": "Input.Text",
									"placeholder": "Zip Code",
									"id": "Zip",
									"isRequired":true,
									"errorMessage" : "Zip Code is required"
								}
							]
						}
					]
				},
				{
					"type": "ActionSet",
					"actions": [
						{
							"type": "Action.ToggleVisibility",
							"title": "<-Back",
							"targetElements": [
								{
									"elementId": "nameProperties",
									"isVisible": true
								},
								{
									"elementId": "addressProperties",
									"isVisible": false
								}
							]
						},
						{
							"type": "Action.ToggleVisibility",
							"title": "Next->",
							"targetElements": [
								{
									"elementId": "addressProperties",
									"isVisible": false
								},
								{
									"elementId": "phoneEmailProperties",
									"isVisible": true
								}
							],
							"inputs":["addressProperties"]
						}
					],
					"id": "Next->"
				}
			],
			"isVisible": false
		},
		{
			"type": "Container",
			"isVisible": false,
			"items": [
				{
					"type": "Input.Text",
					"placeholder": "Cell Number",
					"id": "CellPhone"
				},
				{
					"type": "Input.Text",
					"placeholder": "Home Number",
					"id": "HomePhone"
				},
				{
					"type": "Input.Text",
					"placeholder": "Email Address",
					"id": "Email"
				},
				{
					"type": "ActionSet",
					"actions": [
						{
							"type": "Action.ToggleVisibility",
							"title": "<-Back",
							"targetElements": [
								{
									"elementId": "addressProperties",
									"isVisible": true
								},
								{
									"elementId": "phoneEmailProperties",
									"isVisible": false
								}
							]
						},
						{
							"type": "Action.Submit",
							"title": "Submit"
						}
					]
				}
			],
			"id": "phoneEmailProperties"
		}
	],
	"$schema": "http://adaptivecards.io/schemas/adaptive-card.json"
}
