{
  "type": "AdaptiveCard",
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.3",
  "body": [
    {
      "type": "Container",
      "items": [
        {
          "type": "TextBlock",
          "text": "Choose payment method >"
        },
        {
          "type": "Container",
          "items": [
            {
              "type": "Input.ChoiceSet",
              "choices": [
                {
                  "title": "Visa ending in *1234",
                  "value": "Visa"
                },
                {
                  "title": "America Express ending in *5678",
                  "value": "Amex"
                },
                {
                  "title": "New Card",
                  "value": "NewCard"
                }
              ],
              "placeholder": "Placeholder text",
              "style": "expanded",
              "id": "cardChoiceSet",
              "errorMessage": "Please choose a payment type",
              "isRequired": true,
              "label": "Select the card you would like to use:"
            },
            {
              "type": "TextBlock",
              "text": "Enter new card",
              "weight": "Bolder"
            },
            {
              "type": "ColumnSet",
              "columns": [
                {
                  "type": "Column",
                  "width": "stretch",
                  "items": [
                    {
                      "type": "Input.Text",
                      "placeholder": "Placeholder text",
                      "label": "Card number:",
                      "id": "cardNumber"
                    }
                  ]
                },
                {
                  "type": "Column",
                  "width": "stretch",
                  "items": [
                    {
                      "type": "Input.Date",
                      "label": "Expiration Date:",
                      "id": "cardDate"
                    }
                  ]
                }
              ]
            }
          ],
          "isVisible": false,
          "id": "paymentId"
        }
      ],
      "selectAction": {
        "type": "Action.ToggleVisibility",
        "targetElements": [
          "paymentId"
        ]
      }
    },
    {
      "type": "Container",
      "items": [
        {
          "type": "TextBlock",
          "text": "Shipping information >"
        },
        {
          "type": "Container",
          "items": [
            {
              "type": "Input.ChoiceSet",
              "choices": [
                {
                  "title": "Standard shipping (5-7 business days)",
                  "value": "standardShip"
                },
                {
                  "title": "Expedited shipping (1-2 business days)",
                  "value": "fastShip"
                }
              ],
              "style": "expanded",
              "isRequired": true,
              "errorMessage": "Please choose a shipping type",
              "id": "shippingInput",
              "label": "Please select a shipping method:"
            }
          ],
          "id": "shipping",
          "isVisible": false
        }
      ],
      "selectAction": {
        "type": "Action.ToggleVisibility",
        "targetElements": [
          "shipping"
        ]
      }
    }
  ],
  "actions": [
    {
      "type": "Action.Submit",
      "title": "Place Order"
    }
  ]
}