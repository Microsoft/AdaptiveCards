{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.2",
  "backgroundImage": "https://adaptivecards.io/content/cats/1.png",
  "body": [
    {
      "type": "TextBlock",
      "text": "Text in body"
    },
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "width": "auto",
          "items": [
            {
              "type": "TextBlock",
              "text": "Text in Column"
            }
          ]
        }
      ]
    },
    {
      "type": "Container",
      "items": [
        {
          "type": "TextBlock",
          "text": "Text in Container"
        }
      ]
    }
  ]
}
