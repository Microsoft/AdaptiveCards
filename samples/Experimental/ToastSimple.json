// TODO: Handle actions with input
// TODO: What about inputs that don't have actions?
// TODO: Can we go semantic with title, description, etc

{
    "action": {
        "@type": "foreground",
        "arguments": "action=viewAlarm&alarmId=3",
        "windowsProtocolActivationTargetApplicationPfn": "Microsoft.Alarms"
    },
	"scenario": "alarm",
    "visual": {
        "bindings": {
            "generic": {

                "title": {
                    "text": "Hello world"
                },

                "appLogoOverride": {
                    "src": "logo.png",
                    "hintCrop": "circle"
                },

                "heroImage": {
                    "src": "logo.png"
                },

                "attribution": {
                    "text": "MSN News"
                },

                "content": [
                    {
                        "@type": "TextBlock",
                        "text": "Hello world",
                        "textSize": "large"
                    },
                    {
                        "@type": "TextBlock",
                        "text": "Good afternoon!",
                        "textSize": "medium",
                        "isSubtle": "true"
                    },
                    {
                        "@type": "ActionGroup",
                        "speak": "You can set the due date, add a comment or view more information.",
                        "actions": [
                            {
                                "@type": "ActionCard",
                                "name": "Set due date",
                                "inputs": [
                                    {
                                        "@type": "DateInput",
                                        "id": "dueDate",
                                        "title": "Select a date"
                                    }
                                ],
                                "actions": [
                                    {
                                        "@type": "background",
                                        "name": "OK",
                                        "arguments": "args"
                                    }
                                ]
                            },
                            {
                                "@type": "ActionCard",
                                "name": "Comment",
                                "inputs": [
                                    {
                                        "@type": "TextInput",
                                        "id": "comment",
                                        "isMultiline": true,
                                        "title": "Enter your comment"
                                    }
                                ],
                                "actions": [
                                    {
                                        "@type": "background",
                                        "name": "OK",
                                        "arguments": "args"
                                    }
                                ]
                            },
                            {
                                "@type": "OpenUri",
                                "name": "View",
                                "targets": [
                                    { "os": "default", "uri": "http://...", "windowsTargetPfn": "msn.sports" }
                                ]
                            }
                        ]
                    }
                ]
            }
        }
    }
}