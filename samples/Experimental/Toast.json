// TODO: What about inputs that don't have actions?
// TODO: Can we go semantic with title, description, etc

{
    "activation": {
        "@type": "foreground",
        "arguments": "action=viewAlarm&alarmId=3",
        "windowsProtocolActivationTargetApplicationPfn": "Microsoft.Alarms"
    },
	"scenario": "alarm",
	"header": {
		"id": "alarms",
		"title": "Alarms",
		"activation": {
            "@type": "foreground",
            "arguments": "action=viewAlarm&alarmId=3",
            "windowsProtocolActivationTargetApplicationPfn": "Microsoft.Alarms"
        }
	},
    "visual": {
        "lang": "en-US",
        "baseUri": "http://images.msn.com/",
        "addImageQuery": true,
        
        "bindings": {
            "generic": {
                "lang": "en-US",
                "baseUri": "http://images.msn.com/",
                "addImageQuery": true,
                "launch": "action=viewEventSmall&eventId=548",

                "title": {
                    "text": "Hello world",
                    "lang": "en-US",
                    "hintWrap": true,
                    "hintMaxLines": 2
                },
                "descriptionLine1": {
                    "text": "This is the first JSON toast",
                    "lang": "en-US",
                    "hintWrap": true,
                    "hintMaxLines": 2
                },
                "descriptionLine2": {
                    "text": "A brand new species of toast",
                    "lang": "en-US",
                    "hintWrap": true,
                    "hintMaxLines": 2
                },

                "appLogoOverride": {
                    "src": "logo.png",
                    "alt": "MSN logo",
                    "addImageQuery": true,
                    "hintCrop": "circle"
                },

                "heroImage": {
                    "src": "logo.png",
                    "alt": "MSN logo",
                    "addImageQuery": true
                },

                "attribution": {
                    "text": "MSN News",
                    "lang": "en-US"
                },

                "content": [
                    {
                        "@type": "TextBlock",
                        "text": "Hello world",
                        "textSize": "large"
                    },
                    {
                        "@type": "TextBlock",
                        "text": "Good afternoon!",
                        "textSize": "medium",
                        "isSubtle": "true"
                    },
                    {
                        "@type": "ActionGroup",
                        "speak": "You can set the due date, add a comment or view more information.",
                        "actions": [
                            {
                                "@type": "ActionCard",
                                "name": "Set due date",
                                "inputs": [
                                    {
                                        "@type": "DateInput",
                                        "id": "dueDate",
                                        "title": "Select a date"
                                    }
                                ],
                                "actions": [
                                    {
                                        "@type": "background",
                                        "name": "OK",
                                        "arguments": "args"
                                    }
                                ]
                            },
                            {
                                "@type": "ActionCard",
                                "name": "Comment",
                                "inputs": [
                                    {
                                        "@type": "TextInput",
                                        "id": "comment",
                                        "isMultiline": true,
                                        "title": "Enter your comment"
                                    }
                                ],
                                "actions": [
                                    {
                                        "@type": "background",
                                        "name": "OK",
                                        "arguments": "args"
                                    }
                                ]
                            },
                            {
                                "@type": "OpenUri",
                                "name": "View",
                                "targets": [
                                    { "os": "default", "uri": "http://...", "windowsTargetPfn": "msn.sports" }
                                ]
                            }
                        ]
                    }
                ]
            }
        }
    }
}