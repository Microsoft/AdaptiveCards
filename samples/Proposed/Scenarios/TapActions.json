            "action": {
                "@type": "ShowCardAction",
                "title": "Set due date",
                "card": {
                    "@type": "AdaptiveCard",
                    "body": [
                        {
                            "@type": "TextInput",
                            "style": "date",
                            "id": "dueDate",
                            "title": "Select due date"
                        }
                    ],
                    "actions": [
                        {
                            "@type": "HttpAction",
