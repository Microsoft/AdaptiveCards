{
	"$schema": "https://raw.githubusercontent.com/microsoft/AdaptiveCards/2e844bd4e84f255fbcc3e09d7ffd352fad6c8752/source/nodejs/json-schema-with-types/schema/lib/Type.json",
	"type": "Container",
	"extends": "CardElement",
	"description": "Containers group items together.",
	"properties": {
		"items": {
			"type": "CardElement",
			"description": "The card elements to render inside the `Container`."
		},
		"selectAction": {
			"type": "ISelectAction",
			"description": "An Action that will be invoked when the `Container` is tapped or selected. `Action.ShowCard` is not supported.",
			"version": "1.1"
		},
		"style": {
			"type": "ContainerStyle",
			"description": "Style hint for `Container`."
		},
		"verticalContentAlignment": {
			"type": "VerticalContentAlignment",
			"description": "Defines how the content should be aligned vertically within the container.",
			"default": "top",
			"version": "1.1"
		},
		"bleed": {
			"$ref": "#/definitions/Bleed"
		},
		"backgroundImage": {
			"$ref": "#/definitions/BackgroundImage"
		}
	},
	"required": [
		"type",
		"items"
	]
}