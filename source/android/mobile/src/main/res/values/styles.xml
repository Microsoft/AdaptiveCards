<resources>

    <style name="adaptiveActionPositive" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:colorAccent">@color/actionPositive</item>
    </style>

    <style name="adaptiveActionDestructive" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:colorAccent">@color/actionDestructive</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <!--<item name="colorControlHighlight">@color/colorAccent</item>-->
        <item name="editTextBackground">@drawable/border</item>
        <item name="android:buttonStyle">@style/adaptiveActionDestructive</item>

        <item name="adaptiveActionDestructive">@style/adaptiveActionDestructive</item>
        <item name="adaptiveActionPositive">@style/adaptiveActionPositive</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

