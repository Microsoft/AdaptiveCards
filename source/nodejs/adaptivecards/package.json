{
  "name": "adaptivecards",
  "version": "1.0.0-beta5",
  "description": "Adaptive Card TypeScript/Javascript library for HTML Clients",
  "author": "adaptivecards",
  "license": "MIT",
  "homepage": "http://adaptivecards.io",
  "keywords": [
    "adaptivecards",
    "adaptive",
    "cards",
    "microsoft",
    "bot"
  ],
  "main": "built/adaptivecards.js",
  "types": "built/adaptivecards.d.ts",
  "scripts": {
    "tsc": "tsc -p .",
    "build": "tsc -p ./config/tsconfig.debug.json && webpack",
    "pack": "npm run build && webpack && npm run dts",
    "watch": "webpack --watch",
    "dts": "dts-generator --name adaptivecards --project . --out dist/adaptivecards.d.ts",
    "lint": "tslint -c tslint.json 'src/**/*.{ts,tsx}'",
    "pretest:notyet": "npm run lint",
    "test": "jest --forceExit --runInBand",
    "preversion": "npm test",
    "version": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git://git@github.com/microsoft/AdaptiveCards.git"
  },
  "dependencies": {
    "markdown-it": "^8.4.0"
  },
  "devDependencies": {
    "@types/jest": "^21.1.8",
    "@types/markdown-it": "0.0.1",
    "@types/node": "0.0.2",
    "@types/vkbeautify": "^0.99.2",
    "ajv-cli": "1.1.1",
    "babel-jest": "^21.2.0",
    "dts-generator": "^2.1.0",
    "jest": "^21.2.1",
    "json-loader": "0.5.4",
    "regenerator-runtime": "^0.11.0",
    "ts-jest": "^21.2.3",
    "ts-loader": "^3.1.1",
    "tslint": "^4.4.2",
    "typescript": "^2.6.1",
    "webpack": "^3.8.1"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  }
}