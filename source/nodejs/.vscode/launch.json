{
    "version": "0.1.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Tests",
            "cwd": "${workspaceFolder}\\adaptivecards",
            "program": "${workspaceFolder}\\adaptivecards\\node_modules\\jest\\bin\\jest.js",
            "args": [
                "--runInBand",
                "--config",
                "${workspaceRoot}\\adaptivecards\\config\\jest.debug.json"
            ],
            "sourceMaps": true,
            "outFiles": [
                "${workspaceRoot}/adaptivecards/output/debug/**/*"
            ]
        }
    ]
}